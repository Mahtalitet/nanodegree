<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/list_horizonal_matgin"
    android:layout_marginRight="@dimen/list_horizonal_matgin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/scores_list"
            android:divider="@android:color/transparent"
            android:dividerHeight="15sp"
            />

        <ProgressBar
            android:layout_width="48pt"
            android:layout_height="48pt"
            android:id = "@+id/progress_bar"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:mirrorForRtl="true"
            android:visibility="invisible"
            android:indeterminateDrawable="@drawable/football_ball"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/progress_bar_msg"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:textAlignment="center"
            android:textSize="@dimen/TeamNames"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:visibility="invisible"

            />

</FrameLayout>
