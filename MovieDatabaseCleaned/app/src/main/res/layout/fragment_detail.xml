<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_scroll_view"
    android:clickable="true"
    android:background="@color/cBlue">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.cyberurbi.udacity.udacityprojectoneandmore.Detail$PlaceholderFragment"
    android:background="@color/cBlue"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:orientation="horizontal"
        android:background="@color/cDarkBlue"
        >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:padding="0px"
                >

                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/movie_filler"
                    android:id="@+id/detail_poster_view"
                    android:paddingLeft="@dimen/detail_fragment_overview_margin"

                    />

                </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:paddingLeft="@dimen/detail_fragment_overview_margin"
                android:paddingTop="0px"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/cDarkBlue"
                    android:textColor="@color/cWhite"
                    android:textStyle="bold"
                    android:text="Some movie..."
                    android:gravity="left"
                    android:fontFamily="monospace"
                    android:id="@+id/original_title_text_view"
                    android:paddingBottom="@dimen/detail_fragment_data_spacing"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cDarkBlue"
                    android:textColor="@color/cWhite"
                    android:textStyle="bold"
                    android:text="@string/txt_release_date"
                    android:fontFamily="monospace"
                    android:padding="@dimen/detail_fragment_data_margin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cDarkBlue"
                    android:textColor="@color/cWhite"
                    android:textStyle="normal"
                    android:text="1980-01-01"
                    android:fontFamily="monospace"
                    android:paddingTop="@dimen/detail_fragment_data_margin"
                    android:paddingBottom="@dimen/detail_fragment_data_spacing"
                    android:paddingLeft="@dimen/detail_fragment_data_margin"
                    android:paddingRight="@dimen/detail_fragment_data_margin"
                    android:id="@+id/release_date_view"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cDarkBlue"
                    android:textColor="@color/cWhite"
                    android:textStyle="bold"
                    android:text="@string/txt_rating"
                    android:fontFamily="monospace"
                    android:padding="@dimen/detail_fragment_data_margin"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cDarkBlue"
                    android:textColor="@color/cWhite"
                    android:textStyle="normal"
                    android:text="9.6/10"
                    android:fontFamily="monospace"
                    android:padding="@dimen/detail_fragment_data_margin"
                    android:id="@+id/rating_view"
                    />



            </LinearLayout>




    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cBlue"
        android:textColor="@color/cVeryDarkBlue"
        android:id="@+id/story_view"
        android:padding="@dimen/detail_fragment_overview_margin"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trailer_list_view"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false">

    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cOrange"
        android:text="@string/txt_reviews"
        android:paddingLeft="@dimen/detail_fragment_overview_margin"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textStyle="bold"
        android:textColor="@color/cWhite"
        android:id="@+id/review_header_text_view"

        android:visibility="invisible" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reviews_list_view"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:divider="@color/cVeryDarkBlue"
        android:layout_gravity="top"
        >

    </ListView>

</LinearLayout>

</ScrollView>